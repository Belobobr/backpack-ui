{
  "name": "backpack-ui-global-css",
  "version": "1.0.0",
  "description": "backpack-ui-global-css provides a global stylesheet to be used across lonelyplanet.com",
  "main": "dist/common.css",
  "scripts": {
    "start": "webpack --watch",
    "build": "npm run clean && webpack",
    "build:prod": "NODE_ENV=production npm run clean && webpack",
    "clean": "rm -rf dist",
    "eslint": "eslint ./ --ext .js",
    "stylelint": "stylelint src/**/*.css",
    "lint": "npm run eslint && npm run stylelint",
    "test": "npm run lint",
    "pre-commit": [
      "test"
    ]
  },
  "author": "Lonely Planet",
  "license": "MIT",
  "repository": "https://github.com/lonelyplanet/backpack-ui/tree/master/packages/backpack-ui-global-css",
  "keywords": [
    "css",
    "postcss",
    "backpack-ui"
  ],
  "browserslist": [
    "last 2 versions",
    "ie 11",
    "not ie <= 10"
  ],
  "dependencies": {
    "normalize.css": "^7.0.0",
    "@lonelyplanet/backpack-ui-styles": "1.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "css-loader": "^0.28.7",
    "eslint": "^4.13.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "postcss": "^6.0.14",
    "postcss-calc": "^6.0.1",
    "postcss-cli": "^4.1.1",
    "postcss-loader": "^2.0.9",
    "postcss-map": "^0.9.0",
    "pre-commit": "^1.2.2",
    "style-loader": "^0.19.0",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^18.0.0",
    "webpack": "^3.9.1"
  }
}
